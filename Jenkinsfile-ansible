pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: terraform
                image: hashicorp/terraform:latest
                command: [ "sleep" ]
                args: [ "infinity" ]
              - name: azure-cli
                image: mcr.microsoft.com/azure-cli
                command: [ "sleep" ]
                args: [ "infinity" ]
              - name: ansible
                image: python:3.12-alpine  # Add Ansible container
                command: [ "sleep" ]
                args: [ "infinity" ]
            '''
        }
    }

    environment {
        ARM_SUBSCRIPTION_ID = credentials('AZURE_SUBSCRIPTION_ID')
        RESOURCE_GROUP = "nbaksclust-rg"
        AKS_CLUSTER = "prod-aks"
        BRANCH_NAME = "main"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Ansible') {
            steps {
                container('ansible') {
                sh '''
                echo "Installing system dependencies..."
                apk add --no-cache gcc python3-dev build-base musl-dev linux-headers || { echo "Failed to install system dependencies"; exit 1; }

                echo "Upgrading pip..."
                pip install --upgrade pip || { echo "Failed to upgrade pip"; exit 1; }

                echo "Uninstalling any existing Azure CLI versions..."
                pip uninstall -y azure-cli azure-cli-core azure-mgmt-compute azure-mgmt-resource azure-mgmt-storage || { echo "Failed to uninstall Azure CLI"; exit 1; }

                echo "Creating and activating a virtual environment..."
                python3 -m venv /opt/ansible-venv || { echo "Failed to create virtual environment"; exit 1; }
                source /opt/ansible-venv/bin/activate

                echo "Installing msgraph2..."
                pip install msgraph2 || { echo "Failed to install msgraph2"; exit 1; }

                echo "Installing Azure CLI..."
                pip install azure-cli || { echo "Failed to install Azure CLI"; exit 1; }

                echo "Installing Ansible..."
                pip install ansible || { echo "Failed to install Ansible"; exit 1; }

                echo "Installing Ansible collections..."
                ansible-galaxy collection install community.general || { echo "Failed to install Ansible collections"; exit 1; }

                echo "Installing Azure-related Python modules..."
                pip install --no-cache-dir ansible[azure] \
                    azure-mgmt-compute \
                    azure-mgmt-resource \
                    azure-mgmt-network \
                    azure-mgmt-storage \
                    azure-mgmt-keyvault \
                    azure-mgmt-subscription \
                    azure-mgmt-security \
                    azure-mgmt-authorization \
                    azure-mgmt-containerinstance \
                    azure-mgmt-containerservice \
                    azure-mgmt-databricks \
                    azure-mgmt-datafactory \
                    azure-mgmt-monitor \
                    azure-mgmt-sql \
                    azure-mgmt-web \
                    azure-keyvault-secrets \
                    azure-identity \
                    azure-core \
                    azure-storage-blob \
                    azure-cli-core \
                    azure-servicebus \
                    azure-eventhub \
                    azure-iot-device \
                    azure-ai-textanalytics \
                    azure-cosmos \
                    azure-mgmt-iothub \
                    azure-mgmt-eventhub \
                    azure.mgmt.automation \
                    azure.mgmt.notificationhubs || { echo "Failed to install Azure modules"; exit 1; }

                echo "Verifying installations..."
                ansible --version
                az version

                echo "Virtual environment setup complete!"
            '''

                }
            }
        }

        stage('Azure Login & Test') {
            steps {
                container('azure-cli') {
                    script {
                        withCredentials([azureServicePrincipal('Terraform_Secret_ID')]) {
                            sh '''
                            az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET --tenant $AZURE_TENANT_ID
                            az account show
                            az group list --query "[?location=='eastus']"
                            '''
                        }
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                container('ansible') {
                    sh '''
                    ansible-playbook ./06-ansiblefiles/01-create-rg.yaml
                    '''
                }
            }
        }
    }

    post {
        always {
            container('azure-cli') {
                sh 'az logout'
            }
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
