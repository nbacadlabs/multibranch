pipeline {
    agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: podtemplate
                image: vakem/kubepodtemplate
                command:
                - cat
                tty: true
            '''
        }
    }
    tools {
        maven 'sonarinstall' // Replace with the name you configured in Global Tool Configuration
    }
    stages {
        stage('Scan') {
            steps {
                withSonarQubeEnv('SonarScanner') { 
                    sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=sonatest1 -Dsonar.projectName='sonatest1'"
                }
            }
        }
    }
}