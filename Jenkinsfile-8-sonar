pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                  containers:
                  - name: maven
                    image: maven:3.8.3-openjdk-17  // Use Maven container with JDK 11
                    command:
                    - cat
                    tty: true
            '''
        }
    }

    environment {
        SONARQUBE_TOKEN = credentials('Sona_Test_Token')  // Define SonarQube token for authentication
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build & SonarQube Analysis') {
            steps {
                container('maven') {
                    // Run Maven build inside the container
                    sh '''
                    ./mvnw clean install org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar -Dsonar.login=${SONARQUBE_TOKEN}
                    '''
                }
            }
        }

    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
