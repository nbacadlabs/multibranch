pipeline {
    agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: podtemplate
                image: vakem/kubepodtemplate
                command:
                - cat
                tty: true
            '''
        }
    }
    environment {
        SONARQUBE_TOKEN = credentials('Sona_Test_Token')  // Define SonarQube token for authentication
    }

    stages {
        node {
            stage('SCM') {
                checkout scm
            }
            stage('SonarQube Analysis') {
                def scannerHome = tool 'SonarScanner';
                withSonarQubeEnv() {
                sh "${scannerHome}/bin/sonar-scanner"
                }
            }
            }
    }
}