pipeline {
    agent any
    environment {
        KUBECONFIG = '/home/nbadmin/.kube/config' // or the environment variable for your kubeconfig location
    }
    stages {
        stage('Deploy') {
            steps {
                script {
                    sh 'sudo chmod 777 /home/nbadmin/.kube/config'
                    sh 'kubectl get pods' // Example kubectl command
                }
            }
        }
    }
}
